{{> partials / spacer classW="" class="spacer-3 theme-base" }}
{{> partials / spacer class="spacer-30" }}

{{> partials / ih
  class="header"
  direction="center"
  src="/images/kinsu_email_header.gif"
  src="appUrl + '/kinsu_email_header.gif'"
  alt="Kinsu"
}}
{{> partials / spacer class="spacer-30" }}

{{> partials / art
  text='
		<p>Hello #{user.firstName} #{user.lastName},</p>
		<p>Click and confirm that you want to sign in to Kinsu.<br>
		This link will expire after used.</p>
	'
}}
{{> partials / spacer class="spacer-30" }}

{{> partials / btn
  btnType="btn-primary"
  title="Sign in to Kinsu"
  direction="center"
  href="branchURL + '/PasswordlessAuth?kinsu_token=' + user.token"
}}
{{> partials / spacer class="spacer-30" }}

{{> partials / art
  text='
		<p>With kindness,<br>Kinsu Support</p>
	'
}}
{{> partials / spacer class="spacer-30" }}
